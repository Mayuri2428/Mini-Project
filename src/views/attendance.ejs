<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Attendance - <%= klass.name %></title>
</head>
<body>
  <div class="topbar">
    <div><a href="/dashboard" style="color:#063a4b;text-decoration:none">‚Üê Back</a></div>
    <div class="brand"><%= brand %></div>
    <form method="post" action="/logout"><button type="submit">Logout</button></form>
  </div>
  <div class="container">
    <h1>Attendance - <%= klass.name %> <span class="muted">Section <%= klass.section || '-' %></span></h1>

    <form method="get" action="">
      <label>Date</label>
      <input type="date" name="date" value="<%= date %>">
      <button type="submit">Load</button>
      <% if (typeof saved !== 'undefined') { %><span class="muted">Saved</span><% } %>
    </form>

    <form method="post" action="/class/<%= klass.id %>/attendance" id="dailyForm">
      <input type="hidden" name="date" value="<%= date %>">
      <div class="toolbar">
        <button type="button" class="secondary" id="markAll">Mark all Present</button>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Roll</th>
            <th>Name</th>
            <th>Present</th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(s => { %>
            <tr>
              <td><%= s.roll_no || '-' %></td>
              <td><%= s.name %></td>
              <td>
                <input type="checkbox" name="present_<%= s.id %>" <%= (statusMap.get(s.id) || 'present') === 'present' ? 'checked' : '' %> />
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div class="actions">
        <button type="submit">Save Attendance</button>
      </div>
    </form>
    <script>
      document.getElementById('markAll').addEventListener('click', function(){
        document.querySelectorAll('#dailyForm input[type="checkbox"]').forEach(cb => cb.checked = true);
      });
    </script>
  </div>
</body>
</html>
