<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insights - AttendanceMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #2563eb;
            --success-green: #059669;
            --warning-orange: #d97706;
            --danger-red: #dc2626;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-600: #4b5563;
            --gray-800: #1f2937;
            --gray-900: #111827;
        }

        body {
            background-color: var(--gray-50);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        .insights-header {
            background: white;
            border-bottom: 1px solid var(--gray-200);
            padding: 1.5rem 0;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        /* Insight Cards */
        .insight-card {
            background: white;
            border-radius: 0.75rem;
            border: 1px solid var(--gray-200);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            transition: all 0.2s;
        }

        .insight-card:hover {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transform: translateY(-1px);
        }

        .insight-header {
            display: flex;
            align-items: center;
            justify-content: between;
            margin-bottom: 1rem;
        }

        .insight-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--gray-900);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .insight-icon {
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
        }

        .icon-blue { background: #dbeafe; color: var(--primary-blue); }
        .icon-green { background: #d1fae5; color: var(--success-green); }
        .icon-orange { background: #fed7aa; color: var(--warning-orange); }
        .icon-red { background: #fee2e2; color: var(--danger-red); }

        .insight-action {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            border: none;
            font-weight: 500;
            font-size: 0.875rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }

        .action-primary {
            background: var(--primary-blue);
            color: white;
        }

        .action-primary:hover {
            background: #1d4ed8;
            color: white;
        }

        .action-secondary {
            background: var(--gray-100);
            color: var(--gray-700);
            border: 1px solid var(--gray-200);
        }

        .action-secondary:hover {
            background: var(--gray-200);
            color: var(--gray-800);
        }

        /* Top Insights Grid */
        .top-insights {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .top-insight-card {
            background: linear-gradient(135deg, var(--primary-blue), #1d4ed8);
            color: white;
            border-radius: 0.75rem;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .top-insight-value {
            font-size: 2.5rem;
            font-weight: 700;
            margin: 0;
        }

        .top-insight-label {
            font-size: 1rem;
            opacity: 0.9;
            margin: 0.5rem 0 0 0;
        }

        .top-insight-change {
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.25rem;
        }

        /* Student Lists */
        .student-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .student-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--gray-100);
        }

        .student-item:last-child {
            border-bottom: none;
        }

        .student-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: var(--gray-600);
        }

        .student-info {
            flex: 1;
        }

        .student-name {
            font-weight: 500;
            color: var(--gray-900);
            margin: 0;
        }

        .student-details {
            font-size: 0.875rem;
            color: var(--gray-600);
            margin: 0;
        }

        .student-metric {
            text-align: right;
        }

        .metric-value {
            font-weight: 600;
            font-size: 1.125rem;
        }

        .metric-label {
            font-size: 0.75rem;
            color: var(--gray-600);
        }

        .metric-good { color: var(--success-green); }
        .metric-warning { color: var(--warning-orange); }
        .metric-danger { color: var(--danger-red); }

        /* Charts */
        .chart-container {
            position: relative;
            height: 300px;
            margin: 1rem 0;
        }

        /* Predictions */
        .prediction-item {
            background: var(--gray-50);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 0.75rem;
            border-left: 4px solid var(--primary-blue);
        }

        .prediction-title {
            font-weight: 500;
            color: var(--gray-900);
            margin: 0 0 0.25rem 0;
        }

        .prediction-description {
            font-size: 0.875rem;
            color: var(--gray-600);
            margin: 0;
        }

        .prediction-confidence {
            font-size: 0.75rem;
            color: var(--primary-blue);
            font-weight: 500;
            margin-top: 0.25rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .top-insights {
                grid-template-columns: 1fr;
            }
            
            .insight-header {
                flex-direction: column;
                align-items: stretch;
                gap: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="insights-header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h4 style="margin: 0; color: var(--gray-900);">Attendance Insights</h4>
                    <p style="margin: 0; color: var(--gray-600); font-size: 0.875rem;">Actionable analytics for your classes</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/teacher-dashboard" class="insight-action action-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-3">
        <!-- Alerts -->
        <%- include('partials/alerts', { alerts: (typeof flash !== 'undefined' && flash && flash.message) ? [{ type: 'info', title: 'Info', message: flash.message }] : (alerts || []) }) %>

        <!-- Filters -->
        <div class="insight-card" style="margin-top: 0.5rem;">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Class</label>
                    <select id="filterClass" class="form-select">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Section</label>
                    <select id="filterSection" class="form-select">
                        <option value="">All</option>
                        <option>A</option>
                        <option>B</option>
                        <option>C</option>
                        <option>D</option>
                        <option>E</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Subject</label>
                    <input id="filterSubject" class="form-control" placeholder="e.g., Mathematics" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date Range</label>
                    <input id="filterDateRange" class="form-control" placeholder="Last 30 days" disabled />
                </div>
                <div class="col-md-1 text-end">
                    <a href="/reports" id="btnExportCsv" class="insight-action action-secondary" style="width: 100%; text-decoration:none; display:inline-block; padding: .5rem 0; text-align:center;">
                        <i class="fas fa-chart-bar"></i> Reports
                    </a>
                </div>
                <div class="col-md-1 text-end">
                    <button onclick="exportFullJSON()" class="insight-action action-secondary" style="width: 100%;">
                        <i class="fas fa-file-code"></i> JSON
                    </button>
                </div>
            </div>
        </div>

        <!-- Top Insights -->
        <div class="top-insights" id="topInsights">
            <!-- Top insights will be loaded here -->
        </div>

        <div class="row">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Low Attendance Alert -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-red">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            Students Needing Attention
                        </h5>
                        <a href="/notifications" class="insight-action action-primary">
                            <i class="fas fa-bell"></i>
                            Send Alerts
                        </a>
                    </div>
                    <div id="lowAttendanceStudents">
                        <!-- Low attendance students will be loaded here -->
                    </div>
                </div>

                <!-- Attendance Trends -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-blue">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            Attendance Trends (Last 30 Days)
                        </h5>
                        <div style="display:flex; gap:.5rem;">
                            <button class="insight-action action-secondary" onclick="exportTrendsCSV()">
                                <i class="fas fa-download"></i>
                                CSV
                            </button>
                            <a href="/reports" class="insight-action action-secondary">
                                <i class="fas fa-chart-bar"></i>
                                View Reports
                            </a>
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="trendsChart"></canvas>
                    </div>
                </div>

                <!-- Subject Insights -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-orange">
                                <i class="fas fa-book"></i>
                            </div>
                            Subject Insights (Avg Attendance)
                        </h5>
                        <button class="insight-action action-secondary" onclick="exportSubjectCSV()">
                            <i class="fas fa-download"></i>
                            CSV
                        </button>
                    </div>
                    <div class="chart-container">
                        <canvas id="subjectChart"></canvas>
                    </div>
                </div>

                <!-- Period Insights -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-blue">
                                <i class="fas fa-clock"></i>
                            </div>
                            Period Insights (Avg Attendance)
                        </h5>
                        <button class="insight-action action-secondary" onclick="exportPeriodCSV()">
                            <i class="fas fa-download"></i>
                            CSV
                        </button>
                    </div>
                    <div class="chart-container">
                        <canvas id="periodChart"></canvas>
                    </div>
                </div>

                <!-- Class Performance -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-green">
                                <i class="fas fa-trophy"></i>
                            </div>
                            Class Performance Comparison
                        </h5>
                        <div style="display:flex; gap:.5rem;">
                            <button class="insight-action action-secondary" onclick="exportPerformanceCSV()">
                                <i class="fas fa-download"></i>
                                CSV
                            </button>
                            <a href="/realtime-dashboard" class="insight-action action-secondary">
                                <i class="fas fa-broadcast-tower"></i>
                                Live View
                            </a>
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="performanceChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Top Performers -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-green">
                                <i class="fas fa-star"></i>
                            </div>
                            Top Performers
                        </h5>
                    </div>
                    <ul class="student-list" id="topPerformers">
                        <!-- Top performers will be loaded here -->
                    </ul>
                </div>

                <!-- Predictive Insights -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-orange">
                                <i class="fas fa-crystal-ball"></i>
                            </div>
                            Predictive Insights
                        </h5>
                    </div>
                    <div id="predictions">
                        <!-- Predictions will be loaded here -->
                    </div>
                </div>

                <!-- Teacher Notes -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-blue">
                                <i class="fas fa-sticky-note"></i>
                            </div>
                            Teacher Notes
                        </h5>
                    </div>
                    <form onsubmit="addTeacherNote(event)">
                        <div class="mb-2">
                            <label class="form-label">Note</label>
                            <textarea id="noteText" class="form-control" rows="2" placeholder="Weekly observation or action item..."></textarea>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Student (optional)</label>
                            <input id="noteStudentId" class="form-control" placeholder="Student ID (optional)"/>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="insight-action action-primary"><i class="fas fa-plus"></i> Add Note</button>
                        </div>
                    </form>
                    <div class="mt-3" id="teacherNotes"></div>
                </div>

                <!-- Historical Comparison & Alerts Summary -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-orange">
                                <i class="fas fa-history"></i>
                            </div>
                            Historical Comparison & Alerts
                        </h5>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div id="historicalComparison" style="padding: 0.5rem 0.75rem;"></div>
                        </div>
                        <div class="col-6">
                            <div id="alertsSummary" style="padding: 0.5rem 0.75rem;"></div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="insight-card">
                    <div class="insight-header">
                        <h5 class="insight-title">
                            <div class="insight-icon icon-blue">
                                <i class="fas fa-bolt"></i>
                            </div>
                            Quick Actions
                        </h5>
                    </div>
                    <div class="d-grid gap-2">
                        <a href="/daily-attendance" class="insight-action action-primary">
                            <i class="fas fa-check-circle"></i>
                            Mark Today's Attendance
                        </a>
                        <a href="/notifications/send-low-attendance" class="insight-action action-secondary">
                            <i class="fas fa-exclamation-triangle"></i>
                            Send Low Attendance Alerts
                        </a>
                        <a href="/weekly-reports" class="insight-action action-secondary">
                            <i class="fas fa-envelope"></i>
                            Send Weekly Reports
                        </a>
                        <a href="/manage/class/new" class="insight-action action-secondary">
                            <i class="fas fa-plus"></i>
                            Create New Class
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        let trendsChart = null;
        let performanceChart = null;
        let subjectChart = null;
        let periodChart = null;
        let lastInsightsData = null; // store latest loaded payload

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            populateClassesFilter();
            attachFilterHandlers();
            loadInsightsData();
            loadTeacherNotes();
        });

        async function populateClassesFilter() {
            try {
                const res = await fetch('/api/teacher-classes');
                const data = await res.json();
                if (data.success && Array.isArray(data.classes)) {
                    const sel = document.getElementById('filterClass');
                    data.classes.forEach(cls => {
                        const opt = document.createElement('option');
                        opt.value = cls.id;
                        opt.textContent = `${cls.name}${cls.section ? ' - ' + cls.section : ''}`;
                        sel.appendChild(opt);
                    });
                }
            } catch (e) { /* ignore */ }
        }

        function attachFilterHandlers() {
            ['filterClass','filterSection','filterSubject'].forEach(id => {
                const el = document.getElementById(id);
                if (el) el.addEventListener('change', () => loadInsightsData());
                if (id === 'filterSubject' && el) el.addEventListener('keyup', debounce(() => loadInsightsData(), 500));
            });
        }

        function debounce(fn, wait) {
            let t; return (...args) => { clearTimeout(t); t = setTimeout(() => fn.apply(null, args), wait); };
        }

        // Load all insights data
        async function loadInsightsData() {
            try {
                const params = new URLSearchParams();
                const classId = document.getElementById('filterClass')?.value || '';
                const section = document.getElementById('filterSection')?.value || '';
                const subject = document.getElementById('filterSubject')?.value || '';
                if (classId) params.set('classId', classId);
                if (section) params.set('section', section);
                if (subject) params.set('subject', subject);
                const qs = params.toString();
                const response = await fetch('/api/teacher-insights' + (qs ? ('?' + qs) : ''));
                const data = await response.json();
                
                if (data.success) {
                    lastInsightsData = data;
                    updateTopInsights(data.topInsights);
                    updateLowAttendanceStudents(data.lowAttendanceStudents);
                    updateTopPerformers(data.topPerformers);
                    updatePredictions(data.predictions);
                    updateTrendsChart(data.trendsData);
                    updatePerformanceChart(data.performanceData);
                    updateSubjectChart(data.subjectInsights || []);
                    updatePeriodChart(data.periodInsights || []);
                    updateHistoricalComparison(data.historicalComparison);
                    updateAlertsSummary(data.alertsSummary);
                }
            } catch (error) {
                console.error('Error loading insights data:', error);
                showMessage('Error loading insights data', 'error');
            }
        }

        // Teacher Notes UI
        async function loadTeacherNotes() {
            try {
                const res = await fetch('/api/teacher-notes');
                const data = await res.json();
                renderTeacherNotes(data.notes || []);
            } catch (e) {
                renderTeacherNotes([]);
            }
        }

        function renderTeacherNotes(notes) {
            const container = document.getElementById('teacherNotes');
            if (!container) return;
            if (!notes.length) {
                container.innerHTML = '<div style="color: var(--gray-600);">No notes yet.</div>';
                return;
            }
            container.innerHTML = notes.map(n => `
                <div class="prediction-item" style="display:flex; justify-content:space-between; align-items:start; gap:.5rem;">
                    <div>
                        <p class="prediction-title">Note #${n.id}</p>
                        <p class="prediction-description">${(n.note || '').replace(/</g,'&lt;')}</p>
                        <small class="text-muted">${n.created_at || ''}</small>
                    </div>
                    <button class="insight-action action-secondary" onclick="deleteTeacherNote(${n.id})">Delete</button>
                </div>
            `).join('');
        }

        async function addTeacherNote(ev) {
            ev.preventDefault();
            const note = document.getElementById('noteText')?.value?.trim();
            const studentId = document.getElementById('noteStudentId')?.value || '';
            if (!note) { showMessage('Please enter a note.', 'error'); return; }
            try {
                await fetch('/api/add-teacher-note', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ studentId: studentId || 0, note })
                });
                document.getElementById('noteText').value = '';
                document.getElementById('noteStudentId').value = '';
                await loadTeacherNotes();
                showMessage('Note added', 'success');
            } catch(e) { showMessage('Failed to add note', 'error'); }
        }

        async function deleteTeacherNote(id) {
            try {
                await fetch('/api/delete-teacher-note', {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ id })
                });
                await loadTeacherNotes();
                showMessage('Note deleted', 'success');
            } catch(e) { showMessage('Failed to delete note', 'error'); }
        }

        // Update top insights
        function updateTopInsights(insights) {
            const container = document.getElementById('topInsights');
            
            container.innerHTML = `
                <div class="top-insight-card">
                    <p class="top-insight-value">${insights.averageAttendance || 0}%</p>
                    <p class="top-insight-label">Average Attendance</p>
                    <div class="top-insight-change">
                        <i class="fas fa-${insights.attendanceChange >= 0 ? 'arrow-up' : 'arrow-down'}"></i>
                        ${Math.abs(insights.attendanceChange || 0)}% from last month
                    </div>
                </div>
                <div class="top-insight-card" style="background: linear-gradient(135deg, var(--success-green), #047857);">
                    <p class="top-insight-value">${insights.totalPresent || 0}</p>
                    <p class="top-insight-label">Students Present Today</p>
                    <div class="top-insight-change">
                        <i class="fas fa-users"></i>
                        Out of ${insights.totalStudents || 0} students
                    </div>
                </div>
                <div class="top-insight-card" style="background: linear-gradient(135deg, var(--warning-orange), #ea580c);">
                    <p class="top-insight-value">${insights.lowAttendanceCount || 0}</p>
                    <p class="top-insight-label">Need Attention</p>
                    <div class="top-insight-change">
                        <i class="fas fa-exclamation-triangle"></i>
                        Below 75% attendance
                    </div>
                </div>
            `;
        }

        // Update low attendance students
        function updateLowAttendanceStudents(students) {
            const container = document.getElementById('lowAttendanceStudents');
            
            if (!students || students.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 2rem; color: var(--gray-600);">
                        <i class="fas fa-check-circle fa-3x mb-3" style="color: var(--success-green);"></i>
                        <h6>Great job!</h6>
                        <p>All students have good attendance rates</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = `
                <ul class="student-list">
                    ${students.slice(0, 5).map(student => `
                        <li class="student-item">
                            <div class="student-avatar">
                                ${student.name.charAt(0).toUpperCase()}
                            </div>
                            <div class="student-info">
                                <p class="student-name">${student.name}</p>
                                <p class="student-details">${student.class_name} - ${student.section} â€¢ Roll: ${student.roll_number}</p>
                            </div>
                            <div class="student-metric">
                                <div class="metric-value metric-danger">${student.attendance_rate}%</div>
                                <div class="metric-label">${student.present_days}/${student.total_days} days</div>
                            </div>
                        </li>
                    `).join('')}
                </ul>
                ${students.length > 5 ? `
                    <div style="text-align: center; margin-top: 1rem;">
                        <a href="/reports?filter=low-attendance" class="insight-action action-secondary">
                            View All ${students.length} Students
                        </a>
                    </div>
                ` : ''}
            `;
        }

        // Update top performers
        function updateTopPerformers(performers) {
            const container = document.getElementById('topPerformers');
            
            if (!performers || performers.length === 0) {
                container.innerHTML = `
                    <li class="student-item">
                        <div style="text-align: center; padding: 1rem; color: var(--gray-600);">
                            <p>No performance data available yet</p>
                        </div>
                    </li>
                `;
                return;
            }

            container.innerHTML = performers.slice(0, 5).map((student, index) => `
                <li class="student-item">
                    <div class="student-avatar" style="background: ${index < 3 ? '#fbbf24' : 'var(--gray-200)'}; color: ${index < 3 ? 'white' : 'var(--gray-600)'};">
                        ${index < 3 ? (index + 1) : student.name.charAt(0).toUpperCase()}
                    </div>
                    <div class="student-info">
                        <p class="student-name">${student.name}</p>
                        <p class="student-details">${student.class_name} - ${student.section}</p>
                    </div>
                    <div class="student-metric">
                        <div class="metric-value metric-good">${student.attendance_rate}%</div>
                        <div class="metric-label">Perfect record</div>
                    </div>
                </li>
            `).join('');
        }

        // Update predictions
        function updatePredictions(predictions) {
            const container = document.getElementById('predictions');
            
            if (!predictions || predictions.length === 0) {
                container.innerHTML = `
                    <div class="prediction-item">
                        <p class="prediction-title">Collecting data...</p>
                        <p class="prediction-description">Predictive insights will appear as more attendance data is collected.</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = predictions.map(prediction => `
                <div class="prediction-item">
                    <p class="prediction-title">${prediction.title}</p>
                    <p class="prediction-description">${prediction.description}</p>
                    <p class="prediction-confidence">Confidence: ${prediction.confidence}%</p>
                </div>
            `).join('');
        }

        // Update trends chart
        function updateTrendsChart(data) {
            const ctx = document.getElementById('trendsChart').getContext('2d');
            
            if (trendsChart) {
                trendsChart.destroy();
            }
            
            trendsChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.labels || [],
                    datasets: [
                        {
                            label: 'Attendance Rate',
                            data: data.attendanceRates || [],
                            borderColor: '#2563eb',
                            backgroundColor: 'rgba(37, 99, 235, 0.1)',
                            tension: 0.4,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
        }

        // Update performance chart
        function updatePerformanceChart(data) {
            const ctx = document.getElementById('performanceChart').getContext('2d');
            
            if (performanceChart) {
                performanceChart.destroy();
            }
            
            performanceChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: data.classNames || [],
                    datasets: [{
                        label: 'Attendance Rate',
                        data: data.attendanceRates || [],
                        backgroundColor: [
                            '#059669',
                            '#2563eb',
                            '#d97706',
                            '#dc2626',
                            '#7c3aed'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
        }

        function updateSubjectChart(items) {
            const ctx = document.getElementById('subjectChart').getContext('2d');
            if (subjectChart) subjectChart.destroy();
            subjectChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: items.map(i => i.subject),
                    datasets: [{
                        label: 'Avg Attendance %',
                        data: items.map(i => i.rate),
                        backgroundColor: '#7c3aed'
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100 } } }
            });
        }

        function updatePeriodChart(items) {
            const ctx = document.getElementById('periodChart').getContext('2d');
            if (periodChart) periodChart.destroy();
            periodChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: items.map(i => i.period),
                    datasets: [{
                        label: 'Avg Attendance %',
                        data: items.map(i => i.rate),
                        backgroundColor: '#059669'
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true, max: 100 } } }
            });
        }

        function updateHistoricalComparison(hc) {
            const el = document.getElementById('historicalComparison');
            if (!hc) { el.innerHTML = '<small>No data</small>'; return; }
            const arrow = hc.change >= 0 ? 'arrow-up' : 'arrow-down';
            const color = hc.change >= 0 ? 'success' : 'danger';
            el.innerHTML = `
                <div><strong>Current Month:</strong> ${hc.currentMonthRate}%</div>
                <div><strong>Previous Month:</strong> ${hc.previousMonthRate}%</div>
                <div class="text-${color}"><i class="fas fa-${arrow}"></i> Change: ${hc.change}%</div>
            `;
        }

        function updateAlertsSummary(a) {
            const el = document.getElementById('alertsSummary');
            if (!a) { el.innerHTML = '<small>No data</small>'; return; }
            el.innerHTML = `
                <div><strong>Below Threshold:</strong> ${a.belowThresholdCount}</div>
                <div><strong>Pending Attendance Today:</strong> ${a.pendingAttendanceCount}</div>
                <div><strong>Notifications Sent (7d):</strong> ${a.notificationsSentLast7}</div>
            `;
        }

        // Show message
        function showMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 'alert-info';
            
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert ${alertClass} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.container-fluid');
            container.insertBefore(alertDiv, container.firstChild);
            
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }

        // Export helpers (moved from <style> to fix CSS lint errors)
        function downloadText(filename, text, type = 'text/plain') {
            const blob = new Blob([text], { type });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function toCSV(rows) {
            if (!rows || rows.length === 0) return '';
            const headers = Object.keys(rows[0]);
            const esc = v => ('"' + String(v ?? '').replace(/"/g,'""') + '"');
            const lines = [headers.join(',')].concat(rows.map(r => headers.map(h => esc(r[h])).join(',')));
            return lines.join('\n');
        }

        function exportTrendsCSV() {
            if (!lastInsightsData?.trendsData) return showMessage('No data to export', 'error');
            const { labels = [], attendanceRates = [] } = lastInsightsData.trendsData;
            const rows = labels.map((d, i) => ({ date: d, attendance_rate: attendanceRates[i] ?? '' }));
            downloadText(`insights_trends_${Date.now()}.csv`, toCSV(rows), 'text/csv');
        }

        function exportPerformanceCSV() {
            if (!lastInsightsData?.performanceData) return showMessage('No data to export', 'error');
            const { classNames = [], attendanceRates = [] } = lastInsightsData.performanceData;
            const rows = classNames.map((c, i) => ({ class: c, attendance_rate: attendanceRates[i] ?? '' }));
            downloadText(`insights_performance_${Date.now()}.csv`, toCSV(rows), 'text/csv');
        }

        function exportSubjectCSV() {
            const items = lastInsightsData?.subjectInsights || [];
            if (!items.length) return showMessage('No data to export', 'error');
            const rows = items.map(i => ({ subject: i.subject, attendance_rate: i.rate }));
            downloadText(`insights_subject_${Date.now()}.csv`, toCSV(rows), 'text/csv');
        }

        function exportPeriodCSV() {
            const items = lastInsightsData?.periodInsights || [];
            if (!items.length) return showMessage('No data to export', 'error');
            const rows = items.map(i => ({ period: i.period, attendance_rate: i.rate }));
            downloadText(`insights_period_${Date.now()}.csv`, toCSV(rows), 'text/csv');
        }

        function exportFullJSON() {
            if (!lastInsightsData) return showMessage('No data to export', 'error');
            downloadText(`insights_full_${Date.now()}.json`, JSON.stringify(lastInsightsData, null, 2), 'application/json');
        }
    </script>
</body>
