{
  "name": "attendancems",
  "version": "2.0.0",
  "description": "Professional Attendance Management System with Advanced Features",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "verify": "node verify-setup.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:connectivity": "node test-connectivity.js",
    "test:unit": "mocha tests/unit/**/*.test.js --timeout 10000",
    "test:integration": "mocha tests/integration/**/*.test.js --timeout 30000",
    "test:coverage": "c8 npm test",
    "test:watch": "nodemon --exec npm test",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "build": "npm ci --only=production",
    "build:docker": "docker build -f Dockerfile.production -t attendancems:latest .",
    "deploy:staging": "docker-compose -f docker-compose.staging.yml up -d",
    "deploy:production": "docker-compose -f docker-compose.production.yml up -d",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "logs": "docker-compose logs -f",
    "health": "curl -f http://localhost:3000/health",
    "performance": "artillery run tests/performance/load-test.yml",
    "docs:generate": "jsdoc src/ -r -d docs/",
    "docs:serve": "http-server docs/ -p 8080",
    "clean": "rm -rf node_modules/ logs/ coverage/ docs/",
    "reset": "npm run clean && npm install",
    "precommit": "npm run lint && npm run test:unit",
    "prepush": "npm run test && npm run security:audit"
  },
  "keywords": [
    "attendance",
    "management",
    "education",
    "school",
    "college",
    "tracking",
    "nodejs",
    "express",
    "sqlite",
    "professional"
  ],
  "author": {
    "name": "AttendanceMS Team",
    "email": "support@attendancems.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/attendancems.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/attendancems/issues"
  },
  "homepage": "https://attendancems.com",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-sqlite3": "^0.9.13",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json2csv": "^5.0.7",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "socket.io": "^4.7.4",
    "sqlite": "^4.2.1",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "artillery": "^2.0.3",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json,ejs",
    "ignore": [
      "tests/",
      "logs/",
      "uploads/",
      "backups/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
