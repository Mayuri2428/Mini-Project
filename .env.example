# Application Configuration
NODE_ENV=production
PORT=3000
HOST=localhost
TZ=UTC
LOCALE=en-US

# Security
SESSION_SECRET=your_super_secure_session_secret_key_here_64_chars_minimum
API_KEYS=api_key_1,api_key_2,api_key_3
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DB_PATH=./data/app.db
DB_CACHE_SIZE=1000
DB_MMAP_SIZE=268435456
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# Email Configuration
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM="AttendanceMS <no-reply@yourschool.com>"
EMAIL_RATE_LIMIT=100
EMAIL_DELAY=1000

# SMS Configuration (Optional)
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# File Upload
UPLOAD_ENABLED=true
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
MAX_FILES=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_API_TTL=300
CACHE_DB_TTL=900
CACHE_STATIC_TTL=3600
CACHE_SESSION_TTL=1800
CACHE_REPORTS_TTL=7200
CACHE_CHECK_PERIOD=120
CACHE_MAX_KEYS=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_PATH=./logs
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m
LOG_FORMAT=json

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
MAX_BACKUPS=30
BACKUP_COMPRESSION=true
BACKUP_FULL_SCHEDULE="0 2 * * *"
BACKUP_INCREMENTAL_SCHEDULE="0 */6 * * *"

# Notifications
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
WEEKLY_REPORTS_SCHEDULE="0 9 * * 1"
ATTENDANCE_ALERTS_SCHEDULE="0 18 * * *"

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_EVENT_RETENTION=90
ANALYTICS_REPORT_RETENTION=365
REALTIME_ANALYTICS=true
MAX_REALTIME_EVENTS=1000

# Performance
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=100
SLOW_REQUEST_THRESHOLD=1000

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_MULTI_SESSION=true
FEATURE_REALTIME_DASHBOARD=true
FEATURE_ADVANCED_REPORTS=true
FEATURE_API_ACCESS=true
FEATURE_BULK_OPERATIONS=true
FEATURE_AUDIT_LOG=true

# Redis (Optional - for production scaling)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password